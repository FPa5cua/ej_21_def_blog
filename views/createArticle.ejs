<div class="container">
  <form class="container shadow mt-5 pb-3" action="/usuarios" method="POST">
    <legend>Crear nuevo articulo</legend>
    <div class="mb-3">
      <label for="firstname" class="form-label">Nombre</label>
      <input
        type="text"
        value=""
        name="firstname"
        id="firstname"
        class="form-control"
        placeholder="Ingresar nombre..."
      />
    </div>

    <div class="mb-3">
      <label for="lastname" class="form-label">Apellido</label>
      <input
        type="text"
        value=""
        name="lastname"
        class="form-control"
        id="lastname"
        placeholder="Ingresar apellido..."
      />
    </div>
    <div class="mb-3">
      <label for="age" class="form-label">Edad</label>
      <input
        type="number"
        value=""
        name="age"
        class="form-control"
        id="age"
        placeholder="Ingresar edad..."
      />
    </div>

    <button type="submit" class="btn btn-success ms-auto">Guardar</button>
  </form>
  <br />
  <a href="/usuarios">Volver</a>
</div>
